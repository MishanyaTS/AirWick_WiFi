{
 "configs": [
  "/config.setup.json"
 ],
 "title": [
  {
   "type": "text",
   "class": "text-info",
   "title": "Главная"
  }
 ],
 "class": "col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content": [
  {
   "type": "h5",
   "title": "{{SSDP}}",
   "class": "alert-warning",
   "style": "font-size:10px;width:100%"
  },
  {
   "type": "hr"
  },
  {
   "type": "link",
   "title": "<i class=\"settings-img\"></i> Конфигурация",
   "action": "/index.htm?setup",
   "class": "btn btn-block btn-danger"
  },
  {
   "type": "link",
   "title": "<i class=\"alarm-img\"></i> Настройка таймеров",
   "action": "/index.htm?timer",
   "class": "btn btn-block btn-info"
  },
  {
   "type": "link",
   "title": "<i class=\"settings-img\"></i> Настройки MQTT",
   "action": "/index.htm?mqtt",
   "class": "btn btn-block btn-info"
  },
  {
   "type": "hr"
  },
  {
   "type": "button",
   "title": "Распылить",
   "action": "/motor",
   "class": "btn-block btn-success",
   "style": "width:100%;display:inline"
  },
  {
   "type": "hr"
  },
  {
   "type": "chart",
   "title": "Датчик света - ",
   "state": "analog.json"
  },
  {
   "type": "range",
   "name": "light",
   "title": "Порог срабатывания датчика света ({{light}})",
   "state": "{{light}}",
   "pattern": "min=10 max=1024 step=10",
   "action": "light?light=[[light]]"
  },
  {
   "type": "button",
   "title": "<",
   "action": "lightm",
   "class": "btn-primary",
   "style": "width:10%;display:inline"
  },
  {
   "type": "button",
   "title": ">",
   "action": "lightp",
   "class": "btn-primary",
   "style": "width:10%;float:right"
  },
  {
   "type": "hr"
  },
  {
   "type": "checkbox",
   "class": "checkbox-big",
   "name": "theme",
   "title": "Темная тема",
   "style": "font-size:20px",
   "state": "{{tm}}",
   "action": "tm?tm=[[theme]]",
   "response": "/"
  },
  {
   "type": "hr"
  }
 ]
}